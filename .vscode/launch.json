    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: app.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/app.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Attach to Docker Run",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/",
                    "remoteRoot": "/home/emg-prediction"
                }
            ],
            "port": 5678,
            "host": "127.0.0.1",
            // "preLaunchTask": "Docker Run"
        }
    ]
}